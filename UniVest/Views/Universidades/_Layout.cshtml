<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Universidades</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        * {
            box-sizing: border-box;
            font-family: 'Quicksand', sans-serif;
        }

        body {
            margin: 0;
            background-color: #fff9f2;
        }

        header {
            background: #e3f0ff;
            border-bottom: 2px solid #68a0c8;
            padding: 14px 20px;
            color: #2d0052;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        header .brand {
            font-weight: 700;
        }

        a,
        a:visited {
            color: #2d0052;
            text-decoration: none;
        }

        main {
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        footer {
            margin-top: 40px;
            padding: 16px 20px;
            text-align: center;
            color: #666;
        }

        h2 {
            text-align: center;
            background-color: #e3f0ff;
            border: 2px solid #68a0c8;
            border-radius: 10px;
            padding: 20px;
            margin: 30px 0;
            color: #2d0052;
        }

        form {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px;
            margin-bottom: 30px;
        }

        form select {
            appearance: none;
            border: none;
            background-color: #f5f0fa;
            color: #2d0052;
            padding: 10px 16px;
            border-radius: 20px;
            font-weight: 600;
            min-width: 150px;
            cursor: pointer;
        }

        form button {
            border: none;
            background-color: #2d0052;
            color: white;
            padding: 10px 20px;
            border-radius: 20px;
            font-weight: 600;
            cursor: pointer;
        }

        form button:hover {
            background-color: #481a70;
        }

        .cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
            padding: 0 20px;
        }

        .card {
            background-color: #f5f0fa;
            padding: 15px;
            border-radius: 15px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            position: relative;
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        .card .tag {
            background-color: #ffffff;
            color: #2d0052;
            font-size: 0.75rem;
            font-weight: 600;
            border-radius: 20px;
            padding: 3px 10px;
            display: inline-block;
            align-self: flex-start;
        }

        .card h3 {
            font-size: 1rem;
            font-weight: 600;
            color: #2d0052;
        }

        .card p {
            font-size: 0.9rem;
            color: #666;
            margin: 0;
        }
    </style>
</head>

<body>
    <header>
        <div class="brand">UniVest • Universidades</div>
        <nav>
            <a asp-controller="Home" asp-action="Index">Início</a>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        © @DateTime.Now.Year • UniVest
    </footer>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
</body>

</html>
