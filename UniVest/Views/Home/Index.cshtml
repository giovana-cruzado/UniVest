@model List<UniVest.Models.Curso>
@{
    ViewData["Title"] = "Home";
}

<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">UniVest</h1>
            <p class="lead fw-normal text-white-50 mb-0">Vestibulares e cursos</em></em></p>
        </div>
    </div>
</header>
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach (Curso curso in Model)
            {            
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <h5 class="fw-bolder">@curso.Nome</h5>
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center">
                            <a class="btn btn-outline-dark mt-auto" asp-action="Produto" asp-route-id="@curso.Id" >Ver Detalhes</a></div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</section>