@model UniVest.Models.CampusCurso

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container"></div>
<h1>Crie novos cards</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CampusId" class="control-label"></label>
                <select asp-for="CampusId" class="form-control" asp-items="ViewBag.CampusId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CursoId" class="control-label"></label>
                <select asp-for="CursoId" class="form-control" asp-items="ViewBag.CursoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ModalidadeId" class="control-label"></label>
                <select asp-for="ModalidadeId" class="form-control" asp-items="ViewBag.ModalidadeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Periodo" class="control-label"></label>
                <select asp-for="Periodo" class="form-control">
                    <option value="">Per√≠odo</option>
                    @foreach (var p in (ViewBag.PeriodoId ?? Enumerable.Empty<string>()))
                    {
                        <option value="@p">@p</option>
                    }
                </select>
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duracao" class="control-label"></label>
                <input asp-for="Duracao" class="form-control" />
                <span asp-validation-for="Duracao" class="text-danger"></span>
            </div>
            <div class="btn-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
                <a asp-action="Index" class="btn-voltar">Voltar</a>
            </div>
        </form>
    </div>
</div>
